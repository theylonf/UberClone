<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CorridaActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.UberClone.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.UberClone.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <include layout="@layout/content_passageiro" />

    <Button
        android:id="@+id/btnAceitarCorrida"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/acceptRace"
        android:layout_gravity="bottom"
        android:theme="@style/botaoPadrao"
        android:onClick="aceitarCorrida"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabRota"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="66dp"
        android:backgroundTint="@android:color/holo_orange_dark"
        app:fabSize="normal"
        android:visibility="gone"
        tools:visibility="visible"
        android:src="@drawable/rota" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>